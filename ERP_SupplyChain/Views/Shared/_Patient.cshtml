<div class="user">
    <div class="photo">
        <img src="@Session["PatientImage"].ToString()" />
    </div>
    <div class="user-info">
        <a data-toggle="collapse" href="#collapseExample" class="username">
            <span>
                @Session["PatientUserName"].ToString()
                <b class="caret"></b>
            </span>
        </a>
        <div class="collapse" id="collapseExample">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" href="/User/MyProfile?id=@Session["PatientID"].ToString()">
                        <span class="sidebar-mini"> MP </span>
                        <span class="sidebar-normal"> MY Profile </span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/User/Settings?id=@Session["PatientID"].ToString()">
                        <span class=" sidebar-mini">
                            EP
                        </span>
                        <span class="sidebar-normal"> Settings </span>
                    </a>
                </li>

            </ul>
        </div>
    </div>

</div>
