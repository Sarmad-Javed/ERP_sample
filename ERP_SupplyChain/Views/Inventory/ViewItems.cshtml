@model IEnumerable<ERPEntities.Models.ItemsModel>

@{

        ViewBag.Title = "View Items";

}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Item List</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead class="thead">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.ItemID)</th>
                                        <th>@Html.DisplayNameFor(model => model.ItemName)</th>
                                        <th>@Html.DisplayNameFor(model => model.MfgDate)</th>
                                        <th>@Html.DisplayNameFor(model => model.ExpDate)</th>
                                        <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
                                        <th>@Html.DisplayNameFor(model => model.PurchasePrice)</th>
                                        <th>@Html.DisplayNameFor(model => model.Unit_of_Measure)</th>
                                        <th class="disabled-sorting text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                      {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.ItemID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.MfgDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ExpDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PurchasePrice)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Unit_of_Measure)</td>
                                            <td class="text-right">
                                                <a href="/Inventory/Details?id=@Html.DisplayFor(modelItem => item.ItemID)" class="btn btn-simple btn-link  btn-info btn-just-icon like">
                                                <i class="ti-heart"></i>
                                            </a>
                                                <a href="/Inventory/Update?id=@Html.DisplayFor(modelItem => item.ItemID)" class=" btn btn-simple btn-link btn-success btn-just-icon like">
                                                    <i class="ti-pencil-alt"></i>
                                                </a>
                                                <a href="/Inventory/Delete?id=@Html.DisplayFor(modelItem => item.ItemID)" class="btn btn-simple btn-link btn-danger btn-just-icon remove">
                                                    <i class="ti-close"></i>
                                                </a>
                                                `
                                            </td>
                                        </tr>



                                        @*<tr>
                                               <td>@dr["ItemID"]</td>
                                               <td>@dr["ItemName"]</td>
                                               <td>@dr["UnitPrice"]</td>
                                               <td>@dr["PurchasePrice"]</td>
                                               <td>@dr["MfgDate"].Value.ToShortDateString()</td>
                                               <td>@dr["ExpDate"]</td>
                                               <td class="text-right">
                                                    <a href="#" class="btn btn-simple btn-link  btn-info btn-just-icon like">
                                                        <i class="ti-heart"></i>
                                                    </a>
                                                    <a href="#" class="btn btn-simple btn-link btn-success btn-just-icon like">
                                                        <i class="ti-pencil-alt"></i>
                                                    </a>
                                                    <a href="#" class="btn btn-simple btn-link btn-danger btn-just-icon remove">
                                                        <i class="ti-close"></i>
                                                    </a>
                                                    `
                                                </td>
                                            </tr>*@
                                      }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- <button type="button" class="btn btn-round btn-default dropdown-toggle btn-link" data-toggle="dropdown">
              7 days
            </button> -->
        
    </div>
</div>

